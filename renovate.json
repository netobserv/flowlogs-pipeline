{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "labels": ["dependencies"],
  "gomod": {
    "schedule": [
      "after 1pm on friday"
    ],
    "postUpdateOptions": [
      "gomodUpdateImportPaths",
      "gomodTidy",
      "gomodVendor"
    ],
    "packageRules": [
      {
        "matchManagers": ["gomod"],
        "matchDepTypes": ["indirect"],
        "enabled": true
      },
      {
        "matchPackageNames": ["**"],
        "groupName": "Go modules",
        "matchUpdateTypes": [
          "minor",
          "patch"
        ]
      },
      {
        "matchUpdateTypes": ["major"],
        "enabled": false
      }
    ]
  }
}
